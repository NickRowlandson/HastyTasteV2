@model COMP2007_FinalProject_HastyTaste.Models.MenuItem

@{
    ViewBag.Title = "Details";
}
<div class="spacer"></div>
<div class="container contact">
    <h2>Details</h2>

    <div>
        <h3>@Html.DisplayFor(model => model.Title)</h3>
        <hr />
        <dl class="dl-horizontal">
            <dd>
                <img src="~/Assets/images/@Html.DisplayFor(model => model.ItemImage)" style="width:60%;"/>
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.Description)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>

            <dd>
                $@Html.DisplayFor(model => model.Price)
            </dd>
            
        </dl>
    </div>
        <a href="@Url.Action("Index")" class="superbutton" title="Back to menu">
            <i class="fa fa-arrow-left"></i> Back to Menu
        </a>
        <div class="superbutton">
            @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = Model.ID }, "")
        </div>
    </div>
</div>