<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Hasty Taste Sandwiches</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="logo-container"><a href="/"><img src="~/Assets/images/logo.png" /></a></div>
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li><i class="fa fa-home fa-2x nav-icon"></i>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><i class="fa fa-list fa-2x nav-icon"></i>@Html.ActionLink("Menu", "Index", "MenuItems")</li>
                    <li><i class="fa fa-phone fa-2x nav-icon"></i>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li><i class=""></i>@Html.Partial("_LoginPartial")</li>
                </ul>
            </div>
        </div>
    </div>
    
    @RenderBody()

    <div class="footer">
        <div class="container">
            <footer>
                <span>&copy; @DateTime.Now.Year  Taste Sandwiches</span>
            </footer>
        </div>
    </div>



        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/shoppingCart")
        @RenderSection("scripts", required: false)
</body>
</html>
